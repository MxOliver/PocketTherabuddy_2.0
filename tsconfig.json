{
	"compilerOptions": {
		"baseUrl": ".",
		"lib": ["es2016"],
		"paths": {
			"*": ["src/*"]
		},
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"types": ["node", "jest"],
		"allowJs": true,
		"target": "es2016",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./dist"
	},
	"include": ["src/**/*.ts", "node_modules/jest-extended/types/**/*.d.ts"],
	"exclude": ["node_modules"]
}
